    {% block stylesheets %}
    {% endblock %}
</head>
<body>
    {# Header ou Navigation #}
    {% include 'partials/header.html.twig' %}

    {# Contenu principal de la page #}
    <main>
        {% block body %}
        {% endblock %}
    </main>

    {# Footer #}
    {% include 'partials/footer.html.twig' %}
</body>
</html>
