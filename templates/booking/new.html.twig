{% extends 'base.html.twig' %}

{% block title %}Nouvelle Réservation{% endblock %}

{% block body %}
<h1>Réserver un service</h1>
    {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}

        <div class="form-group mb-3">
            {{ form_label(form.date, 'Date de réservation', {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(form.date, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.date) }}
        </div>

        <div class="form-group mb-3">
            {{ form_label(form.heure, 'Heure de réservation', {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(form.heure, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.heure) }}
        </div>

        <div class="form-group mb-3">
            {{ form_label(form.service, 'Type de service', {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(form.service, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.service) }}
        </div>

        <button type="submit" class="btn btn-primary">Réserver</button>

    {{ form_end(form) }}
{% endblock %}
